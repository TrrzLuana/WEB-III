<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Usamos boxicons-->>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        .btn-acept {
            background-color: #51af64;  /* Verde */
            color: white;
        }
  
        .btn-delete {
          color: #b62645; /* Color vino para el texto */
          border: 2px solid #b62645; /* Contorno color vino */
        }
        .navbar-brand, .nav-link {
        color: #ec3f64 !important; /* Color vino para el texto */
        }

      </style>

    <title>CRUD</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg bg-light"style="background-color: #e3f2fd;" >
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Gestion de Empleados</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" href="/">Inicio</a>
              </li>
              
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    <% if (empleado) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Editar Empleado</div>
            <div class="card-body">
                <form action="/update" method="POST">
                    <input id="id" name="id" value="<%=empleado.id%>" hidden>
                    <div class="mb-3">
                        <label for="empleado" class="form-label"> Nombre </label>
                        <input type="text" class="form-control" id="name" name="name" value="<%=empleado.nombre%>" tabindex="1">
                    </div>

                    <div class="mb-3">
                        <label for="empleado" class="form-label"> Departamento </label>
                        <select id="depto" name="depto" class="form-select" tabindex="2">
                            <option selected>Selecione una opcion</option>
                            <option <%=empleado.depto=='Administración' ? "selected" : ''%> value="administracion">Administración</option>
                            <option <%=empleado.depto=='Recursos Humanos' ? "selected" : ''%> value="recursos humanos">Recursos Humanos</option>
                            <option <%=empleado.depto=='Contabilidad' ? "selected" : ''%> value="contabilidad">Contabilidad</option>
                            <option <%=empleado.depto=='Marketing' ? "selected" : ''%> value="marketing">Marketing</option>
                            <option <%=empleado.depto=='Atencion al cliente' ? "selected" : ''%> value="atencion al cliente">Atención al Cliente</option>
                            <option <%=empleado.depto=='Desarrollo de software' ? "selected" : ''%> value="desarrollo de software">Desarrollo de Software</option>
                            <option <%=empleado.depto=='Finanzas' ? "selected" : ''%> value="finanzas">Finanzas</option>
                        </select>
                      </div>

                      <div class="mb-3">
                        <label for="empleado" class="form-label"> Salario </label>
                        <input type="number" class="form-control" id="salario" name="salario" value="<%=empleado.salario%>" tabindex="1">
                        
                      </div>
                    <button type="submit" class="btn btn-acept" tabindex="5">Aplicar cambios</button>
                    <a href="/" class="btn btn-secondary"> Cancelar </a>
                  </form>
        
            </div>
        </div>
    </div>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
  </body>
</html>
